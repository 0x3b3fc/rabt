generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum ApplicationStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  password    String
  name        String?
  phone       String?
  role        Role         @default(USER)
  unitId      String?
  unit        Unit?        @relation(fields: [unitId], references: [id])
  application Application?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("users")
}

model Governorate {
  id           String        @id @default(cuid())
  name         String        @unique
  isActive     Boolean       @default(true)
  units        Unit[]
  applications Application[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("governorates")
}

model Unit {
  id            String        @id @default(cuid())
  governorateId String?
  governorate   Governorate?  @relation(fields: [governorateId], references: [id], onDelete: SetNull)
  name          String        @unique
  whatsappLink  String?
  address       String?
  phone         String?
  isActive      Boolean       @default(true)
  users         User[]
  applications  Application[] @relation("AssignedUnit")
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@map("units")
}

model Application {
  id             String            @id @default(cuid())
  userId         String            @unique
  user           User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  governorateId  String
  governorate    Governorate       @relation(fields: [governorateId], references: [id])
  fullName       String
  nationalId     String            @unique
  birthDate      DateTime
  education      String
  address        String
  status         ApplicationStatus @default(PENDING)
  assignedUnitId String?
  assignedUnit   Unit?             @relation("AssignedUnit", fields: [assignedUnitId], references: [id])
  adminNote      String?
  photoUrl       String?
  submittedAt    DateTime          @default(now())
  decidedAt      DateTime?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  @@map("applications")
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}
